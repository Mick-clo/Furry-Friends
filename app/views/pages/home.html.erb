<div class="banner">
  <div class="banner-content text-center">
    <h1>Furry Friend <br>
your donations never end !</h1>
    <p>Donate.Play.Support.</p>
    <%= link_to "Find a shelter", shelters_path, class:"btn btn-lg btn-primary " %>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="overview-card text-center">
        <i class="fas fa-donate card-icon"></i>
        <h2 class="card-title">+8500€</h2>
        <p>Donated</p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="overview-card text-center">
        <i class="fas fa-users card-icon"></i>
        <h2 class="card-title">+354</h2>
        <p>Collaborators </p>
      </div>
    </div>
    <div class="col-md-4">
      <div class="overview-card text-center">
        <i class="fas fa-home card-icon"></i>
        <h2 class="card-title">+468</h2>
        <p>Animals saved</p>
      </div>
    </div>
  </div>
</div>

<section class="value-prop-section container">
