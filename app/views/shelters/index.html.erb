<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<br>
<br>
<div class="d-flex justify-content-center flex-wrap">
  <% @shelters.each do |shelter| %>
    <div class="card-shelter">
      <div class="card-shelter-infos">
      <img src="https://www.southernliving.com/thmb/_6DRkgHuqeUD4ZEqjV4eEyXB_YA=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-999587886-2000-3032f84051be4e9c9cb0aa64ed493854.jpg">
        <h2> <%= shelter.name %> </h2>
        <em> <%= shelter.address %></em>
        <p> <%= shelter.description %> </p>
        <div class="d-flex">
          <div class="p-2"><%= link_to "Donate", new_shelter_pet_path(shelter) %></div>
          <div class="p-2"><%= link_to "more info", "#" %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
